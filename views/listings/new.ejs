<% layout("/layouts/boilerplate") -%>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create a New Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation">


                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                    <div class="invalid-feedback">Title should be valid</div>
                </div>

                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="listing[description]" placeholder="enter description"
                        class="form-control" required></textarea>
                        <div class="invalid-feedback">Description should be valid</div>
                </div>
                <div class="mb-3">
                    <lable for="Image url" class="form-label">Image</lable>
                    <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control">
                </div>
                <div class="row"> 
                    <div class="mb-3 col-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>

                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
                    <div class="invalid-feedback">Location should be valid</div>
                </div>

                <button class="btn btn-dark" style="background-color:#fe424d;">ADD</button>

            </form>
            <br>
            <br>
        </div>
    </div>