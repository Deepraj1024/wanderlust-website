<% layout("/layouts/boilerplate") -%>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show card listing-card">
            <img src="<%=listing.image%>" alt="listing_image" class="card-img-top show-img" style="height: 30vh;">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %> <br>
                        &#8377;<%= listing.price %> <br>
                            <%= listing.location %> <br>
                                <%= listing.country %>
                </p>
            </div>
        </div>
        <br>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3"
                style="background-color:#fe424d;">Edit</a>
            <br> <br>
            <form method="POST" action="/listings/<%=listing._id%>?_method=delete">
                <button class="btn btn-dark offset-3">Delete</button>
            </form>

            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%=listing._id%>/review" method="POST" novalidate class="needs-validation">
                <div>
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please submit some comment for review</div>
                </div>
                <button class="btn btn-outline-dark">submit</button>
            </form>
            <hr>
            <p><b>All Review</b></p>
            <% for(review of listing.reviews) { %>
                <div class="row">
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-text">
                                Deep
                            </h5>
                            <p class="card-img-top">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> stars
                            </p>
                            <form class="mb-3" method="post"
                                action="/listings/<%=listing._id%>/review/<%=review._id%>?_method=delete">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>

                </div>
        </div>


    </div>