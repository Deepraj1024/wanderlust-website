<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-8 offset-3">Login</h1>
    <br><br>
    <div class="col-8 offset-3">


        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" type="text" id="username" class="form-control" required>
            
            </div>
            
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" type="password" id="password" class="form-control" required>
            </div>
            <button class="btn btn-success">login</button>

        </form>
    </div>


</div>